        interval = 2
        color_good = "#2AA198"
        color_degraded = "#B58900"
        color_bad = "#DC322F"
}

# Orden optimizado de los mÃ³dulos
order += "cpu_temperature 0"
order += "cpu_usage"
order += "load"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

cpu_temperature 0 {
        format = " %degreesÂ°C"
        path = "/sys/class/thermal/thermal_zone0/temp"
        max_threshold = 80
}

cpu_usage {
        format = " CPU %usage"
}

memory {
        format = " RAM %used / %total"
        threshold_degraded = "1G"
        format_degraded = "MEMORIA < %available"
}

load {
        format = " %1min"
        max_threshold = 5
}

disk "/" {
        format = " %avail"
        prefix_type = "custom"
        low_threshold = 10
        threshold_type = "percentage_avail"
}

wireless _first_ {
        format_up = " %essid (%quality)"
        format_down = " desconectado"
}

ethernet _first_ {
        format_up = " %speed"
        format_down = " desconectado"
}

